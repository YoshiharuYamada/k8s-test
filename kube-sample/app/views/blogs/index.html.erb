<section class="content-header">
  <h1>Blogs</h1>
</section>

<section class="content">
  <div class='box'>
    <div class="box-header">
      <%= link_to 'New Blog', new_blog_path, class: 'btn btn-sm btn-success pull-right' %>
    </div>
    <div class='box-body table-responsive no-padding'>
      <table class='table table-hover'>
        <thead>
          <tr>
            <th>Title</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.title %></td>
              <td>
                <div class="pull-right">
                  <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-sm btn-default' %>
                  <%= link_to 'Destroy', blog, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
