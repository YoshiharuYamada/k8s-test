<%= form_with(model: blog, local: true, class: 'form-horizontal') do |f| %>
  <div class='box-body'>
    <%= f.bootstrap_form_group(:title) do %>
      <%= f.label :title, class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.bootstrap_error_message_on :title %>
      </div>
    <% end %>
    <%= f.bootstrap_form_group(:body) do %>
      <%= f.label :body, class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= f.text_area :body, class: 'form-control', rows: 5 %>
        <%= f.bootstrap_error_message_on :body %>
      </div>
    <% end %>
  </div>
  <div class='box-footer'>
    <%= f.submit class: 'btn btn-success' %>
    <div class="pull-right">
      <%= link_to 'Back', blogs_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
